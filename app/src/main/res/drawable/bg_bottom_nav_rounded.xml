<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the shape for the background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp" />
            <solid android:color="@color/bottomNavigationBGColor" />
        </shape>
    </item>

    <!-- This is to add a background color for the BottomNavigationView -->
    <item android:bottom="2dp"> <!-- Add some padding from the bottom to avoid clipping shadow -->
        <shape android:shape="rectangle">
            <solid android:color="@color/bottomNavigationBGColor" />
        </shape>
    </item>
</layer-list>